{
  "name": "@boardgamelab/docs",
  "version": "1.0.0",
  "scripts": {
    "codecept": "HEADLESS=true codeceptjs run --steps",
    "dev": "run-p routify rollup",
    "dev:nollup": "run-p routify nollup",
    "clear": "rm -rf codecept static/screenshots",
    "build": "routify -b && rollup -c && routify export && workbox injectManifest",
    "gen": "run-s clear build codecept",
    "serve": "spassr --serve-spa --spa-port 8080",
    "export": "routify export",
    "rollup": "rollup -cw",
    "nollup": "nollup -c",
    "routify": "routify"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "codeceptjs": "^2.6.10",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "del": "^5.1.0",
    "magic-string": "^0.25.7",
    "mdsvex": "^0.8.7",
    "nollup": "^0.12.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.3.0",
    "postcss-load-config": "^2.1.0",
    "rollup": "^2.18.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-hot": "^0.0.31",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-svelte-hot": "^0.10.0",
    "rollup-plugin-terser": "^6.1.0",
    "spassr": "^1.1.2",
    "tailwindcss": "^1.7.6"
  },
  "dependencies": {
    "@rollup/plugin-replace": "^2.3.3",
    "@sveltech/routify": "^1.9.7",
    "postcss-import": "^12.0.1",
    "svelte": "^3.23.2",
    "svelte-preprocess": "^4.0.8",
    "workbox-cli": "^5.1.3"
  },
  "routify": {
    "extensions": "svelte,html,svx,md",
    "dynamicImports": true,
    "routifyDir": ".routify"
  }
}
